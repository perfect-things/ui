{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [ "esnext", "DOM", "DOM.Iterable" ],
    "moduleResolution": "node",
    "maxNodeModuleJsDepth": 10,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
  },
  "include": [ "src", "docs-src", "tests" ],
  "exclude": [ "docs", "node_modules" ]
}
